{
	"name": "phone-catalog",
	"private": true,
	"scripts": {
		"dev": "yarn docker:dev",
		"cloud:dev": "DEV_MODE=cloud next dev",
		"cloud:migrate": "dotenv -e .env.cloud.local -- yarn db:migrate",
		"docker:migrate": "dotenv -e .env.docker -- yarn db:migrate",
		"docker:dev": "yarn docker:up && yarn docker:migrate && DEV_MODE=docker next dev && yarn docker:down",
		"docker:up": "docker-compose up -d && zx --quiet ./bin/wait-for-mysql.mjs",
		"docker:down": "docker-compose down",
		"docker:test:integration": "yarn docker:up && yarn docker:migrate && DEV_MODE=docker yarn test test/integration && yarn docker:down",
		"docker:test:watch": "./bin/watch-docker",
		"db:migrate": "npx prisma db push",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"test": "jest",
		"test:unit": "yarn test test/unit",
		"test:integration": "yarn test test/integration",
		"test:watch": "jest --watch"
	},
	"dependencies": {
		"@chakra-ui/icons": "^1.1.1",
		"@chakra-ui/react": "^1.7.4",
		"@emotion/react": "^11",
		"@emotion/styled": "^11",
		"@prisma/client": "3.8.1",
		"dotenv-cli": "^4.1.1",
		"framer-motion": "^5",
		"next": "12.0.8",
		"next-connect": "^0.11.0",
		"prisma": "^3.8.1",
		"react": "17.0.2",
		"react-dom": "17.0.2",
		"swr": "^1.1.2"
	},
	"devDependencies": {
		"@next/eslint-plugin-next": "^12.0.8",
		"@santima10/eslint-config": "2.1.0",
		"@testing-library/jest-dom": "^5.16.1",
		"@testing-library/react": "^12.1.2",
		"@types/faker": "5",
		"@types/jest": "^27.4.0",
		"@types/node": "17.0.10",
		"@types/react": "17.0.38",
		"@types/test-listen": "^1.1.0",
		"@typescript-eslint/eslint-plugin": "^5.10.0",
		"dotenv": "^14.2.0",
		"eslint": "^8.7.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "^2.25.4",
		"eslint-plugin-jest": "^25.7.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-react": "^7.28.0",
		"eslint-plugin-simple-import-sort": "^7.0.0",
		"factory.ts": "^0.5.2",
		"faker": "5.5.3",
		"jest": "^27.4.7",
		"jest-extended": "^1.2.0",
		"node-fetch": "^2.0.0",
		"prettier": "^2.5.1",
		"test-listen": "^1.1.0",
		"typescript": "4.5.5",
		"zx": "^4.3.0"
	},
	"prettier": "@santima10/eslint-config/.prettierrc.json"
}
